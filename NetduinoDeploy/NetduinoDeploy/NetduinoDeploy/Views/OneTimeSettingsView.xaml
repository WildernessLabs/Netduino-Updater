<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetduinoDeploy.OneTimeSettingsView">
    <Grid Margin="10">
        <Label Text="Model:" />
        <Picker x:Name="pickerModel" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" TextColor="#23ABE3" 
                Grid.Row="0" Grid.Column="2" />
        <Label Text="MAC Address:" 
                Grid.Row="1" Grid.Column="0" />
        <Entry x:Name="entryMacAddress" Text="{Binding MacAddress}" IsEnabled="{Binding IsNetworkCapable}"
                Grid.Row="1" Grid.Column="2" />
        <Label x:Name="lblStatus" Text="{Binding Status}" 
                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" />
        <Button x:Name="buttonSave" Text="Save Settings" Command="{Binding CommitSettingsSelected}" IsEnabled="{Binding CanSave}"
                Grid.Row="2" Grid.Column="2" />

    </Grid>
</ContentView>